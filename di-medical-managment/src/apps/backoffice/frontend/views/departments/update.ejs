<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Actualizar departamento</title>
  <link rel="stylesheet" href="/css/main.css">
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</head>
<body>
  <div id="admin-dash">

    <%- include('../partials/_leftbar') %>
    
    <main id="main-admin">
      <header class="section-header">
        <section class="breadcrumb">
          <a href="/backoffice/department">
            <small>Departamentos</small>
          </a>
          <span class="breadcrumb-slash">/</span>
          <a href="/backoffice/department/<%= department.id %>/update">
            <small>Actualizar</small>
          </a>
        </section>
      </header>

      <section id="new-client-form">
        <form action="/backoffice/department/<%= department.id %>/update?_method=PUT" method="post" id="create-client-form">
          <input type="text" hidden id="id" name="id" value="<%= department.id %>">
          
          <label for="name">Nombre:</label>
          <input type="text" name="name" id="name" class="input" value="<%= department.name %>" required>

          <button type="submit" class="button primary">Actualizar</button>
        </form>
      </section>
    </main>
  </div>

  <script>
    document.getElementById('create-client-form').addEventListener('submit', function(event) {
      event.preventDefault();

      swal({
        title: '¿Estás seguro?',
        text: 'Estás a punto de actualizar el departamento. Revisa los detalles',
        buttons: true,
        dangerMode: true,
      }).then((accepted) => {
        if (accepted) {
          this.submit();
        }
      });
    });
  </script>
</body>
</html>
