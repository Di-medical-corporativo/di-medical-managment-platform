<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sucursales</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <div id="admin-dash">

    <%- include('../partials/_leftbar') %>
    
    <main id="main-admin">

      <header class="section-header">
        <section class="breadcrumb">
          <a href="/backoffice/sucursal">
            <small>Sucursales</small>
          </a>
          <span class="breadcrumb-slash">/</span>
        </section>

        <button id="new-client" class="button primary" onclick="window.location.href='/backoffice/sucursal/new'">Nueva sucursal</button>
      </header>

      <section id="client-list">
        <table class="table">
          <thead>
              <tr>
                  <th>Nombre</th>
                  <th>Dirección</th>
                  <th>Teléfono</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < branches.length; i++) { %>
              <tr>
                <td><%= branches[i].name %></td>
                <td><%= branches[i].address %></td>
                <td><%= branches[i].phone %></td>
                <td style="text-align: right;" id="actions">
                  <button class="button primary"
                    onclick="window.location.href='/backoffice/sucursal/<%= branches[i].id %>/update'"
                  >Actualizar</button>
                </td>
            </tr>
            <% } %>
          </tbody>
      </table>
      </section>
    </main>
  </div>
</body>
</html>

</body>
</html>
