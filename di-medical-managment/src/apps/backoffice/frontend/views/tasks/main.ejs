                </footer>
              </div>
            <% }) %>
          </div>
        </div>

        <div class="task-list">
          <div class="task-title">
            <small>Tareas vencidas</small>
          </div>

          <div class="tasks">
            <% overdueTasks.forEach(task => { 
              const formattedDate = new Date(task.dueTo).toLocaleString('es-MX', {
